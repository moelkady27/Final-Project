<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.residence_details.activities.ResidenceDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/residence_image_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_details"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_residence"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_star_24"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number_star_residence_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="5"
                android:textSize="16sp"
                android:textColor="@color/edit_text"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@+id/star_residence"
                app:layout_constraintStart_toEndOf="@+id/star_residence"
                app:layout_constraintTop_toTopOf="@+id/star_residence" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sale_type_residence_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/search_border"
                android:gravity="end"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sale"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/star_residence"
                app:layout_constraintStart_toEndOf="@+id/number_star_residence_details"
                app:layout_constraintTop_toTopOf="@+id/star_residence" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_apartment_residence_category_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/search_border"
                android:fontFamily="@font/poppins_medium"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/apartment"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/star_residence"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/star_residence" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/apartment_residence_title_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="Woodland Apartment"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_apartment_residence_category_details"
                app:layout_constraintStart_toStartOf="@+id/star_residence"
                app:layout_constraintTop_toBottomOf="@+id/star_residence" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_location_featured_estates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@+id/apartment_residence_title_details"
                app:layout_constraintTop_toBottomOf="@+id/apartment_residence_title_details"
                app:srcCompat="@drawable/baseline_location_on_24"
                app:tint="@color/favourite" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/apartment_location_residence_detailss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="1012 Ocean avanue, New yourk, USA"
                android:textColor="@color/edit_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_location_featured_estates"
                app:layout_constraintEnd_toEndOf="@+id/apartment_residence_title_details"
                app:layout_constraintStart_toEndOf="@+id/iv_location_featured_estates"
                app:layout_constraintTop_toTopOf="@+id/iv_location_featured_estates" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout_residence_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/apartment_location_residence_detailss"
                app:layout_constraintStart_toStartOf="@+id/apartment_residence_title_details"
                app:layout_constraintTop_toBottomOf="@+id/apartment_location_residence_detailss"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/RoundedTabLayoutStyle"
                app:tabTextColor="@color/colorPrimaryText">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/description" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gallery" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/review" />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_residence_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tabLayout_residence_details"
                app:layout_constraintStart_toStartOf="@+id/tabLayout_residence_details"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout_residence_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/add_review"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>