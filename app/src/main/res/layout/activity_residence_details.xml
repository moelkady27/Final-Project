<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.residence_details.activities.ResidenceDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/residence_image_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_details"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_residence"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_star_24"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number_star_residence_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="5"
                android:textSize="16sp"
                android:textColor="@color/edit_text"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@+id/star_residence"
                app:layout_constraintStart_toEndOf="@+id/star_residence"
                app:layout_constraintTop_toTopOf="@+id/star_residence" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="("
                android:textSize="16sp"
                android:textColor="@color/edit_text"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@+id/number_star_residence_details"
                app:layout_constraintStart_toEndOf="@+id/number_star_residence_details"
                app:layout_constraintTop_toTopOf="@+id/number_star_residence_details" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number_reviews_residence_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="680"
                android:textSize="16sp"
                android:textColor="@color/edit_text"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@+id/arrow1"
                app:layout_constraintStart_toEndOf="@+id/arrow1"
                app:layout_constraintTop_toTopOf="@+id/arrow1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/reviews"
                android:textSize="16sp"
                android:textColor="@color/edit_text"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toBottomOf="@+id/number_reviews_residence_details"
                app:layout_constraintStart_toEndOf="@+id/number_reviews_residence_details"
                app:layout_constraintTop_toTopOf="@+id/number_reviews_residence_details" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/arrow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text=")"
                android:gravity="center_vertical"
                android:textColor="@color/edit_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/arrow1"
                app:layout_constraintEnd_toStartOf="@+id/tv_apartment_residence_category_details"
                app:layout_constraintStart_toEndOf="@+id/review"
                app:layout_constraintTop_toTopOf="@+id/arrow1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_apartment_residence_category_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/search_border"
                android:fontFamily="@font/poppins_medium"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/apartment"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/review" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/apartment_residence_title_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="Woodland Apartment"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_apartment_residence_category_details"
                app:layout_constraintStart_toStartOf="@+id/star_residence"
                app:layout_constraintTop_toBottomOf="@+id/review" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/apartment_location_update_residence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:text="1012 Ocean avanue, New yourk, USA"
                android:textColor="@color/edit_text"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/apartment_residence_title_details"
                app:layout_constraintStart_toStartOf="@+id/apartment_residence_title_details"
                app:layout_constraintTop_toBottomOf="@+id/apartment_residence_title_details" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout_residence_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tabTextAppearance="@style/RoundedTabLayoutStyle"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="@color/colorPrimaryText"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/apartment_location_update_residence"
                app:layout_constraintStart_toStartOf="@+id/apartment_location_update_residence"
                app:layout_constraintTop_toBottomOf="@+id/apartment_location_update_residence">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/description" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gallery" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/review" />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_residence_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tabLayout_residence_details"
                app:layout_constraintStart_toStartOf="@+id/tabLayout_residence_details"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout_residence_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>