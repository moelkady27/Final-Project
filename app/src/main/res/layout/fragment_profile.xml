<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.profile.fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_profile"
                android:src="@drawable/user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="-10dp"
                android:tint="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:src="@drawable/ic_edit"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="@+id/cv_image_profile"
                app:layout_constraintEnd_toEndOf="@+id/cv_image_profile"
                android:contentDescription="@string/content_description"
                android:focusable="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/profile_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_profile_email"
                app:layout_constraintEnd_toEndOf="@+id/cv_image_profile"
                app:layout_constraintStart_toStartOf="@+id/cv_image_profile"
                app:layout_constraintTop_toBottomOf="@+id/cv_image_profile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tv_profile_email"
                android:textColor="@color/colorThemeDarkGrey"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_profile_name"
                app:layout_constraintStart_toStartOf="@+id/tv_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_profile_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/tv_profile_email"
                app:layout_constraintEnd_toEndOf="@+id/tv_profile_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_email">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_profile_listings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/profile_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/con_profile_sold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/listing_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="30"
                        android:textColor="@color/colorThemeDarkGreen"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_profile_title_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_profile_title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/listings"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/listing_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_profile_sold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/profile_background"
                    app:layout_constraintBottom_toBottomOf="@id/con_profile_listings"
                    app:layout_constraintEnd_toStartOf="@+id/con_profile_reviews"
                    app:layout_constraintStart_toEndOf="@id/con_profile_listings"
                    app:layout_constraintTop_toTopOf="@id/con_profile_listings">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sold_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/colorThemeDarkGreen"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_profile_title_4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_profile_title_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/sold"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sold_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_profile_reviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_background"
                    app:layout_constraintBottom_toBottomOf="@+id/con_profile_sold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/con_profile_sold"
                    app:layout_constraintTop_toTopOf="@+id/con_profile_sold">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reviews_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="28"
                        android:textColor="@color/colorThemeDarkGreen"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_profile_title_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_profile_title_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/reviews"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reviews_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@color/home_search"
                app:layout_constraintEnd_toEndOf="@+id/constraint_profile_1"
                app:layout_constraintStart_toStartOf="@+id/constraint_profile_1"
                app:layout_constraintTop_toBottomOf="@+id/constraint_profile_1">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/round_white_black"
                    android:backgroundTint="@color/home_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.tabs.TabLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/con"
                app:layout_constraintStart_toStartOf="@+id/con"
                app:layout_constraintTop_toBottomOf="@+id/con" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>