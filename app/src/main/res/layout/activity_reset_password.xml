<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.password.activities.ResetPasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_reset_password"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_reset_password_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:gravity="center|start"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/tv_reset_password_title_1"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_reset_password"
        app:layout_constraintStart_toStartOf="@+id/toolbar_reset_password"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_reset_password" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_reset_password_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:lineHeight="20dp"
        android:fontFamily="@font/poppins"
        android:gravity="center|start"
        android:text="@string/tv_reset_password_title_2"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_reset_password_title_1"
        app:layout_constraintStart_toStartOf="@+id/tv_reset_password_title_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_reset_password_title_1"
        tools:ignore="UnusedAttribute" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27dp"
        app:boxBackgroundMode="outline"
        app:startIconTint="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="@string/new_password_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="16sp"
        android:background="@drawable/custom_edit_text_rounded"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="?attr/colorControlNormal"
        app:layout_constraintEnd_toEndOf="@+id/tv_reset_password_title_2"
        app:layout_constraintStart_toStartOf="@+id/tv_reset_password_title_2"
        app:layout_constraintTop_toBottomOf="@id/tv_reset_password_title_2" >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text_rounded"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        app:boxBackgroundMode="outline"
        app:startIconTint="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="16sp"
        android:background="@drawable/custom_edit_text_rounded"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="?attr/colorControlNormal"
        app:layout_constraintEnd_toEndOf="@+id/til_password"
        app:layout_constraintStart_toStartOf="@+id/til_password"
        app:layout_constraintTop_toBottomOf="@id/til_password" >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text_rounded"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingEnd="2dp"
        android:paddingBottom="14dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:icon="@drawable/ic_arrow_next"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/til_confirm_password"
        app:layout_constraintStart_toStartOf="@+id/til_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/til_confirm_password"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>