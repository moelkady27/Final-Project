<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/fl_header_image"
                android:layout_width="0dp"
                android:layout_height="210dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_description"
                    android:src="@drawable/iv_logo" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sign_up_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/tv_sign_up_title"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/et_username_sign_up"
                app:layout_constraintEnd_toEndOf="@+id/fl_header_image"
                app:layout_constraintStart_toStartOf="@+id/fl_header_image"
                app:layout_constraintTop_toBottomOf="@id/fl_header_image" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_username_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text_rounded"
                android:drawableStart="@drawable/ic_username"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="@string/user_name_hint"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/et_email_sign_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sign_up_title"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text_rounded"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/til_password_sign_up"
                app:layout_constraintEnd_toEndOf="@+id/et_username_sign_up"
                app:layout_constraintStart_toStartOf="@+id/et_username_sign_up"
                app:layout_constraintTop_toBottomOf="@id/et_username_sign_up"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="16dp"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/colorPrimary"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                android:background="@drawable/custom_edit_text_rounded"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="?attr/colorControlNormal"
                app:boxBackgroundMode="outline"
                app:layout_constraintBottom_toTopOf="@id/til_confirm_password_sign_up"
                app:layout_constraintEnd_toEndOf="@+id/et_email_sign_up"
                app:layout_constraintStart_toStartOf="@+id/et_email_sign_up"
                app:layout_constraintTop_toBottomOf="@id/et_email_sign_up" >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text_rounded"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_confirm_password_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="16dp"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/colorPrimary"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                android:background="@drawable/custom_edit_text_rounded"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="?attr/colorControlNormal"
                app:layout_constraintBottom_toTopOf="@id/cb_terms_and_conditions"
                app:layout_constraintEnd_toEndOf="@+id/til_password_sign_up"
                app:layout_constraintStart_toStartOf="@+id/til_password_sign_up"
                app:layout_constraintTop_toBottomOf="@id/til_password_sign_up" >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_confirm_password_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text_rounded"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_terms_and_conditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/btn_next_sign_up"
                app:layout_constraintEnd_toEndOf="@+id/til_confirm_password_sign_up"
                app:layout_constraintStart_toStartOf="@+id/til_confirm_password_sign_up"
                app:layout_constraintTop_toBottomOf="@id/til_confirm_password_sign_up"
                tools:checked="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_arrow_next"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_up_using_google"
                app:layout_constraintEnd_toEndOf="@+id/cb_terms_and_conditions"
                app:layout_constraintStart_toStartOf="@+id/cb_terms_and_conditions"
                app:layout_constraintTop_toBottomOf="@id/cb_terms_and_conditions" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_up_using_google"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_using_google_background"
                android:drawableStart="@drawable/ic_google"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/sign_up_using_google"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/ll_already_a_member"
                app:layout_constraintEnd_toEndOf="@+id/btn_next_sign_up"
                app:layout_constraintStart_toStartOf="@+id/btn_next_sign_up"
                app:layout_constraintTop_toBottomOf="@id/btn_next_sign_up" />

            <LinearLayout
                android:id="@+id/ll_already_a_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/btn_sign_up_using_google"
                app:layout_constraintStart_toStartOf="@+id/btn_sign_up_using_google"
                app:layout_constraintTop_toBottomOf="@id/btn_sign_up_using_google"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_already_a_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:padding="5dp"
                    android:text="@string/already_a_member"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:text="@string/log_in"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>