<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.residence_details.fragment.DescriptionFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gallery_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|start"
        android:text="@string/gallery"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_gallery_title_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gallery_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|start"
        android:text="("
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_gallery_title_1"
        app:layout_constraintTop_toTopOf="@id/tv_gallery_title_1"
        app:layout_constraintBottom_toBottomOf="@id/tv_gallery_title_1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gallery_title_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|start"
        android:text="400"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_gallery_title_2"
        app:layout_constraintTop_toTopOf="@id/tv_gallery_title_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_gallery_title_2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gallery_title_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|start"
        android:text=")"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_gallery_title_3"
        app:layout_constraintTop_toTopOf="@id/tv_gallery_title_3"
        app:layout_constraintBottom_toBottomOf="@id/tv_gallery_title_3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/tv_gallery_title_4"
        app:layout_constraintStart_toStartOf="@id/tv_gallery_title_1"
        app:layout_constraintTop_toBottomOf="@id/tv_gallery_title_1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_gallery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>