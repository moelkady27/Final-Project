<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.password.activities.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_forget_password"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_forgot_password_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|start"
                android:text="@string/tv_forgot_password_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_forget_password" />

            <ImageView
                android:id="@+id/iv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/iv_forgot_password"
                app:layout_constraintBottom_toTopOf="@id/tv_forgot_password_title_2"
                app:layout_constraintEnd_toEndOf="@id/tv_forgot_password_title_1"
                app:layout_constraintStart_toStartOf="@id/tv_forgot_password_title_1"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_password_title_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_forgot_password_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_forgot_password_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@id/et_email_forgot_password"
                app:layout_constraintEnd_toEndOf="@+id/iv_forgot_password"
                app:layout_constraintStart_toStartOf="@+id/iv_forgot_password"
                app:layout_constraintTop_toBottomOf="@+id/iv_forgot_password" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/custom_edit_text_rounded"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/btn_send"
                app:layout_constraintEnd_toEndOf="@+id/tv_forgot_password_title_2"
                app:layout_constraintStart_toStartOf="@+id/tv_forgot_password_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_password_title_2"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/btn_send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/et_email_forgot_password"
                app:layout_constraintStart_toStartOf="@+id/et_email_forgot_password"
                app:layout_constraintTop_toBottomOf="@id/et_email_forgot_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>