                    android:layout_marginEnd="18dp"
                    android:background="@drawable/button_background_add"
                    android:text="@string/minus"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/count_bathroom"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_balcony"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/custom_edit_text_rounded"
                app:layout_constraintEnd_toEndOf="@+id/con_bathroom"
                app:layout_constraintStart_toStartOf="@+id/con_bathroom"
                app:layout_constraintTop_toBottomOf="@+id/con_bathroom">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/balcony"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/minus_balcony"
