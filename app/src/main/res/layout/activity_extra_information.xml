                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@+id/con_rent"
                app:layout_constraintStart_toStartOf="@+id/con_rent"
                app:layout_constraintTop_toBottomOf="@id/con_rent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_listing_type_extra_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_rent_monthly"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
