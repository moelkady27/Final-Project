                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/button_background_add"
                    android:text="@string/minus"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/count_bedroom"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_bathroom"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/custom_edit_text_rounded"
                app:layout_constraintEnd_toEndOf="@+id/con_bedroom"
                app:layout_constraintStart_toStartOf="@+id/con_bedroom"
                app:layout_constraintTop_toBottomOf="@+id/con_bedroom">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/bathroom"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/minus_bathroom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/plus_bathroom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background_add"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/count_bathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/minus_bathroom"
                    app:layout_constraintEnd_toStartOf="@+id/plus_bathroom"
                    app:layout_constraintTop_toTopOf="@+id/minus_bathroom" />

                <Button
                    android:id="@+id/minus_bathroom"
                    android:layout_width="30dp"
