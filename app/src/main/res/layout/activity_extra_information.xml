                    android:text="0"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/minus_bedroom"
                    app:layout_constraintEnd_toStartOf="@+id/plus_bedroom"
                    app:layout_constraintTop_toTopOf="@+id/minus_bedroom" />

                <Button
