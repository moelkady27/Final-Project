<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UploadPreviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/fl_header_btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/back_button_background"
                app:layout_constraintBottom_toTopOf="@id/tv_upload_preview_title_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_arrow_back" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upload_preview_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:gravity="center|start"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_upload_photo_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/tv_upload_preview_title_2"
                app:layout_constraintEnd_toEndOf="@+id/fl_header_btn_back"
                app:layout_constraintStart_toStartOf="@+id/fl_header_btn_back"
                app:layout_constraintTop_toBottomOf="@+id/fl_header_btn_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upload_preview_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="27dp"
                android:lineHeight="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="@string/tv_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/fl_upload_preview"
                app:layout_constraintEnd_toEndOf="@+id/tv_upload_preview_title_1"
                app:layout_constraintStart_toStartOf="@+id/tv_upload_preview_title_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_upload_preview_title_1"
                tools:ignore="UnusedAttribute" />

            <FrameLayout
                android:id="@+id/fl_upload_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/upload_preview_background"
                android:padding="30dp"
                app:layout_constraintBottom_toTopOf="@id/btn_next_upload_preview"
                app:layout_constraintEnd_toEndOf="@id/tv_upload_preview_title_2"
                app:layout_constraintStart_toStartOf="@id/tv_upload_preview_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_upload_preview_title_2">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_upload_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/content_description"
                    android:src="@drawable/ic_user_placeholder" />

            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_upload_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="75dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingEnd="2dp"
                android:paddingBottom="12dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_arrow_next"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fl_upload_preview"
                app:layout_constraintStart_toStartOf="@+id/fl_upload_preview"
                app:layout_constraintTop_toBottomOf="@id/fl_upload_preview"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>