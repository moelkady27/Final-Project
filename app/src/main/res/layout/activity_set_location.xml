<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.complete_register.activities.SetLocationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_set_location"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_set_location_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:gravity="center|start"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_set_location_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/tv_set_location_title_2"
                app:layout_constraintEnd_toEndOf="@+id/toolbar_set_location"
                app:layout_constraintStart_toStartOf="@+id/toolbar_set_location"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_set_location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_set_location_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="27dp"
                android:lineHeight="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="@string/tv_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/fl_set_location"
                app:layout_constraintEnd_toEndOf="@+id/tv_set_location_title_1"
                app:layout_constraintStart_toStartOf="@+id/tv_set_location_title_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_set_location_title_1"
                tools:ignore="UnusedAttribute" />

            <FrameLayout
                android:id="@+id/fl_set_location"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="27dp"

                android:layout_marginEnd="27dp"
                android:background="@drawable/upload_preview_background"
                app:layout_constraintEnd_toEndOf="@id/tv_set_location_title_2"
                app:layout_constraintStart_toStartOf="@id/tv_set_location_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_set_location_title_2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_set_location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/set_location_icon_background"
                        android:padding="10dp"
                        android:src="@drawable/ic_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.051"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_set_location_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/tv_set_location_title_3"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_set_location_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_set_location_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_set_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/custom_edit_text_background"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="37dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="28dp"
                        android:paddingBottom="14dp"
                        android:text="@string/btn_set_location"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_set_location_title_3"
                        app:layout_constraintStart_toStartOf="@+id/iv_set_location_icon"
                        app:layout_constraintTop_toBottomOf="@+id/tv_set_location_title_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_set_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="75dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingEnd="2dp"
                android:paddingBottom="12dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_arrow_next"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fl_set_location"
                app:layout_constraintStart_toStartOf="@+id/fl_set_location"
                app:layout_constraintTop_toBottomOf="@id/fl_set_location"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>