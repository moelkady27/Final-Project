<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UploadPhotoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upload_photo_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:gravity="center|start"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_upload_photo_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/tv_upload_photo_title_2"
                app:layout_constraintEnd_toEndOf="@+id/toolbar_upload_photo"
                app:layout_constraintStart_toStartOf="@+id/toolbar_upload_photo"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_upload_photo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upload_photo_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="27dp"
                android:lineHeight="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="@string/tv_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/fl_from_gallery"
                app:layout_constraintEnd_toEndOf="@+id/tv_upload_photo_title_1"
                app:layout_constraintStart_toStartOf="@+id/tv_upload_photo_title_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_upload_photo_title_1"
                tools:ignore="UnusedAttribute" />

            <FrameLayout
                android:id="@+id/fl_from_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/custom_edit_text_background"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/fl_take_photo"
                app:layout_constraintEnd_toEndOf="@id/tv_upload_photo_title_2"
                app:layout_constraintStart_toStartOf="@id/tv_upload_photo_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_upload_photo_title_2">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_from_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/content_description"
                    android:src="@drawable/ic_gallery" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/from_gallery"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/custom_edit_text_background"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/btn_next_upload_photo"
                app:layout_constraintEnd_toEndOf="@id/fl_from_gallery"
                app:layout_constraintStart_toStartOf="@id/fl_from_gallery"
                app:layout_constraintTop_toBottomOf="@id/fl_from_gallery">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/content_description"
                    android:src="@drawable/ic_camera" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/take_photo"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp" />

            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="75dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingEnd="2dp"
                android:paddingBottom="12dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_arrow_next"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fl_take_photo"
                app:layout_constraintStart_toStartOf="@+id/fl_take_photo"
                app:layout_constraintTop_toBottomOf="@id/fl_take_photo"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>