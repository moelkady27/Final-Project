<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profile_recycler_view_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_image_pending_profile"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/profile_recycler_view_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_pending"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="s" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_pending_profile_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_chat_home_background"
            android:backgroundTint="@color/home_search"
            android:contentDescription="@string/content_description"
            android:tint="@color/colorPrimaryText"
            app:layout_constraintEnd_toEndOf="@id/iv_image_pending_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_image_pending_profile"
            app:srcCompat="@drawable/ic_favorites" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pending_profile_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_background_add"
            android:backgroundTint="@color/colorText"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:text="@string/rent"
            android:textColor="@color/home_search"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_image_pending_profile"
            app:layout_constraintEnd_toEndOf="@id/iv_image_pending_profile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pending_profile_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Wings Tower"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/iv_image_pending_profile"
            app:layout_constraintStart_toStartOf="@+id/iv_image_pending_profile"
            app:layout_constraintTop_toBottomOf="@+id/iv_image_pending_profile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clock_pending_profile"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_clock"
            android:tint="@color/colorSnackBarSuccess"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_pending_profile_title_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_pending_profile_title_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number_star_pending_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="November 21, 2021"
            android:textColor="@color/colorThemeDarkGrey"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/clock_pending_profile"
            app:layout_constraintStart_toEndOf="@id/clock_pending_profile"
            app:layout_constraintTop_toTopOf="@+id/clock_pending_profile"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>