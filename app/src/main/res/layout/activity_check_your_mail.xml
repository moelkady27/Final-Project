<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.CheckYourMailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_your_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="27dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="27dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/content_description"
                android:src="@drawable/iv_check_your_email"
                app:layout_constraintBottom_toTopOf="@id/tv_check_your_mail_title_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_check_your_mail_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_check_your_mail_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="28sp"
                app:layout_constraintBottom_toTopOf="@id/tv_check_your_mail_title_2"
                app:layout_constraintEnd_toEndOf="@+id/iv_check_your_mail"
                app:layout_constraintStart_toStartOf="@+id/iv_check_your_mail"
                app:layout_constraintTop_toBottomOf="@+id/iv_check_your_mail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_check_your_mail_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:text="@string/tv_check_your_mail_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/btn_ok"
                app:layout_constraintEnd_toEndOf="@+id/tv_check_your_mail_title_1"
                app:layout_constraintStart_toStartOf="@+id/tv_check_your_mail_title_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_your_mail_title_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="75dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="75dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/btn_ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_check_your_mail_title_2"
                app:layout_constraintStart_toStartOf="@+id/tv_check_your_mail_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_check_your_mail_title_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>