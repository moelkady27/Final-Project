<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.CompleteSignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/toolbar_validation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/back_button_background"
                app:layout_constraintBottom_toTopOf="@id/tv_complete_sign_up_title_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_arrow_back" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_complete_sign_up_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:gravity="center|start"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tv_complete_sign_up_title_1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/tv_complete_sign_up_title_2"
                app:layout_constraintEnd_toEndOf="@+id/toolbar_validation"
                app:layout_constraintStart_toStartOf="@+id/toolbar_validation"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_validation" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_complete_sign_up_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="27dp"
                android:lineHeight="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="@string/tv_title_2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/et_first_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_complete_sign_up_title_1"
                app:layout_constraintStart_toStartOf="@+id/tv_complete_sign_up_title_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_complete_sign_up_title_1"
                tools:ignore="UnusedAttribute" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/custom_edit_text_rounded"
                android:gravity="center_vertical"
                android:hint="@string/first_name_hint"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/et_last_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_complete_sign_up_title_2"
                app:layout_constraintStart_toStartOf="@+id/tv_complete_sign_up_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_complete_sign_up_title_2"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/custom_edit_text_rounded"
                android:gravity="center_vertical"
                android:hint="@string/last_name_hint"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/et_gender"
                app:layout_constraintEnd_toEndOf="@+id/et_first_name"
                app:layout_constraintStart_toStartOf="@+id/et_first_name"
                app:layout_constraintTop_toBottomOf="@id/et_first_name"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/custom_edit_text_rounded"
                android:gravity="center_vertical"
                android:hint="@string/gender_hint"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/et_phone_number"
                app:layout_constraintEnd_toEndOf="@+id/et_last_name"
                app:layout_constraintStart_toStartOf="@+id/et_last_name"
                app:layout_constraintTop_toBottomOf="@id/et_last_name"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/custom_edit_text_rounded"
                android:gravity="center_vertical"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/btn_next_complete_sign_up"
                app:layout_constraintEnd_toEndOf="@+id/et_gender"
                app:layout_constraintStart_toStartOf="@+id/et_gender"
                app:layout_constraintTop_toBottomOf="@id/et_gender"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_complete_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="75dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="2dp"
                android:paddingBottom="10dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_arrow_next"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/et_phone_number"
                app:layout_constraintStart_toStartOf="@+id/et_phone_number"
                app:layout_constraintTop_toBottomOf="@id/et_phone_number"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>